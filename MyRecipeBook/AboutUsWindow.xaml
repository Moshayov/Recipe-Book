        <Image HorizontalAlignment="Left" Height="66" Margin="354,198,0,0" VerticalAlignment="Top" Width="83" Source="/תמונה1.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
