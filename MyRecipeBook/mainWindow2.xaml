<Window x:Class="MyRecipeBook.mainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRecipeBook"
        mc:Ignorable="d"
        Title="my recipe book" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="377*"/>
            <ColumnDefinition Width="424*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Food_Blog_Lbel"  FontWeight="Bold" Content="Food  Blog" HorizontalAlignment="Left" Margin="302,16,0,0" VerticalAlignment="Top" Width="141" FontSize="26" Grid.ColumnSpan="2"/>
        <Button x:Name="My_Recipes" Content="" HorizontalAlignment="Left" Margin="322,-3,0,0" VerticalAlignment="Top" Height="96" Width="104" RenderTransformOrigin="-0.094,0.17" Click="My_Recipes_Click" BorderBrush="#FFF5F0F0" Grid.Column="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.922"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/icons8-recipe-book-64.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Label x:Name="My_recipes_lbel" Content="My Recipes" HorizontalAlignment="Left" Margin="322,79,0,0" VerticalAlignment="Top" Height="35" Width="105" FontSize="16" Grid.Column="1"/>
        <Grid Margin="158,118,2,1" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="Serch" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Search: "  FontWeight="Bold" VerticalAlignment="Top" Height="30" Width="91" FontSize="16" Margin="12,76,0,0"/>
        <Grid Margin="0,0,0,320" Grid.ColumnSpan="2">
            <Border BorderBrush="Black" BorderThickness="1"/>
        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="69,79,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="117" Height="26"/>
        <Button Content="Recipes for beginer"  FontWeight="Bold"  HorizontalAlignment="Left" Margin="266,76,0,0" VerticalAlignment="Top" Width="172" Height="26" Background="#FFF9F6F6" BorderBrush="#FFFDF9F9" FontSize="16" Grid.ColumnSpan="2"/>
        <Button Content="Recomanded Recipes" FontWeight="Bold"  HorizontalAlignment="Left" Margin="116,79,0,0" VerticalAlignment="Top" Height="23" Width="183" Background="#FFFBF8F8" BorderBrush="#FFFDFBFB" FontSize="16" Grid.Column="1"/>
        <Grid Margin="2,117,222,1"/>
        <Button HorizontalAlignment="Left" Margin="322,6,0,0" VerticalAlignment="Top" Height="83" Width="91" Grid.Column="1" BorderBrush="#FFF9F6F6" Foreground="#FFF3F1F1">
            <Button.Background>
                <ImageBrush ImageSource="/icons8-recipe-book-64.png" Stretch="None"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
